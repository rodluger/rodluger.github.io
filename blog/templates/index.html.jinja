     <!-- Blog Section -->

     <section id="blog">
          <div class="container">
               <div class="row">

                    <div class="col-md-offset-1 col-md-10 col-sm-12">
                         <div class="section-title">
                              <h1>rodrigo's blog</h1>
                         </div>

                         <style>
                              #toc_container {
                                   display: table;
                                   font-size: 12pt;
                                   margin-bottom: 1em;
                                   padding: 20px;
                                   width: auto;
                                   margin-left: auto;
                                   margin-right: auto;
                              }

                              .toc_title {
                                   font-size: 16pt;
                                   font-weight: 700;
                                   color: #666;
                                   text-align: center;
                              }

                              .toc_list {
                                   padding: 0;
                              }

                              #toc_container a {
                                   color: #666;
                              }

                              #toc_container a:hover {
                                   color: #000;
                              }

                              @media (min-width: 768px) {
                                   .toc-regular {
                                        display: inherit;
                                   }
                                   .toc-tiny {
                                        display: none;
                                   }
                              }

                              @media (max-width: 768px) {
                                   .toc-regular {
                                        display: none;
                                   }
                                   .toc-tiny {
                                        display: inherit;
                                   }
                              }
                         </style>

                         <div id="toc_container">
                              <p class="toc_title">Contents</p>
                              <table style="width:100%">

                                   {% for item in posts %}
                                   <tr>
                                        <td class="toc-regular" style="text-align:right;">{{item.post.shortdate}}</td>
                                        <td class="toc-tiny" style="text-align:right;">{{item.post.shortdate_tiny}}</td>
                                        <td style="padding: 0 0.5em;">|</td>
                                        <td class="toc-regular"><a href="#{{item.post.id}}" style="font-weight:400;">{{item.post.title}}</a></td>
                                        <td class="toc-tiny"><a href="#{{item.post.id}}" style="font-weight:400;">{{item.post.title_tiny}}</a></td>
                                   </tr>
                                   {% endfor %}

                              </table>
                         </div>

                         {% for item in posts %}
                         <div class="blog-post-thumb" id="{{item.post.id}}">
                              <div class="blog-post-image">
                                   <a href="{{item.post.url}}">
                                        <img src="{{item.post.banner}}" class="img-responsive" alt="Blog Image">
                                   </a>
                              </div>
                              <div class="blog-post-title">
                                   <h3><a href="{{item.post.url}}">{{item.post.title}}</a></h3>
                              </div>
                              <div class="blog-post-format">
                                   <span><a href="{{item.post.author.url}}"><img src="{{item.post.author.image}}"
                                                  class="img-responsive img-circle">
                                             {{item.post.author.name}}</a></span>
                                   <span><i class="far fa-calendar"
                                             style="margin-right:5px; color: #666;"></i>{{item.post.date}}</span>
                              </div>
                              <div class="blog-post-des">
                                   <p>{{item.post.summary}}</p>
                                   <a href="{{item.post.url}}" class="btn btn-default">Continue Reading</a>
                              </div>
                         </div>
                         {% endfor %}

                    </div>

               </div>
          </div>
     </section>

